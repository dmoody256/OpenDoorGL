{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/ButtonTest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build/bin",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceRoot}/build/lib"
                }
            ],
            "externalConsole": true,
            "miDebuggerPath": "${workspaceRoot}/.vscode/vglrun_debug.sh",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}