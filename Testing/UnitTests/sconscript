"""
SConcript for building the RedCube Visual test.
"""

# scons
from SCons.Script.SConscript import Return

# project
from BuildUtils import ImportVar

TEST_ENV = ImportVar('TEST_ENV')
env = TEST_ENV.Clone()

env.VariantDir('build', 'TestHeaders', duplicate=0)

debugFlag = ""
if env['DEBUG_BUILD']:
    debugFlag = "-g"

env.Append(LIBS=[
    "OpenDoorGL-GLFW3",
    "glfw3",
])

MAIN_ENV = ImportVar('MAIN_ENV')
env.Append(CPPPATH=[
    MAIN_ENV['PROJECT_DIR'] + "/Dependencies/cxxtest/cxxtest",
])

MAIN_ENV['PROGRESS'].AddBuild(MAIN_ENV, ['TranslateTest.hpp'], env.subst(
    '$PROGPREFIX') + 'test_translate' + env.subst('$PROGSUFFIX'))
prog = env.CxxTest('build/test_translate', ['build/TranslateTest.hpp'])

targets = dict()

targets['executable'] = prog
targets['resources'] = []

Return('targets')
