"""
SConcript for building the RedCube Visual test.
"""

# scons
from SCons.Script.SConscript import Return

# project
from BuildUtils import ImportVar
from BuildUtils import SetupBuildEnv

TEST_ENV = ImportVar('TEST_ENV')

env = TEST_ENV.Clone()

debugFlag = ""
if env['DEBUG_BUILD']:
    debugFlag = "-g"

env.Append(LIBS=[
    "OpenDoorGL-GLFW3",
    "glfw3",
])

MAIN_ENV = ImportVar('MAIN_ENV')
MAIN_ENV['PROGRESS'].AddBuild(MAIN_ENV,
                              [env.File('StackedCubeTest.cpp').abspath], env.subst(
                                  '$PROGPREFIX') + "StackedCubeTest" + env.subst('$PROGSUFFIX'))
env, prog = SetupBuildEnv(env, "exec", "StackedCubeTest", [
                          MAIN_ENV['BUILD_DIR'] + '/StackedCubeTest.cpp'])

targets = dict()

targets['executable'] = prog
targets['resources'] = []

Return('targets')
